<Window x:Class="PractikWork3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PractikWork3"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="FirstPageButton" Content="Задание 1" Click="FirstPageButton_Click" Style="{StaticResource ButtonAlert}"/>
            <Button Name="SecondPageButton" Content="Задание 2" Click="SecondPageButton_Click" Style="{StaticResource ButtonAlert}"/>
            <Button Name="ThirdPageButton" Content=" Задание 3" Click="ThirdPageButton_Click" Style="{StaticResource ButtonAlert}"/>
        </StackPanel>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
